<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-3">
        <h1><%= @recipe.title %> - New Instruction</h1>
      </div>
    </div>

    <div class="column is-6 is-offset-3">
      <article class="media">
        <div class="media-content">
          <%= form_with model: [@recipe, @instruction], local: true do |form| %>
            <div class="field">
              <p class="control">
                <%= form.text_field :step, class: "input", placeholder: 'Step' %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= form.text_area :instruction, class: "textarea", placeholder: "Add instruction..." %>
              </p>
            </div>
            <nav class="level">
              <div class="level-left">
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= form.submit "Save", class: 'button is-info' %>
                </div>
                <div class="level-item">
                  <%= link_to "Cancel", recipe_path(@recipe), class: 'button is-light' %>
                </div>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>