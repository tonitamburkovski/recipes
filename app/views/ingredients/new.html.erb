<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-3">
        <h1><%= @recipe.title %> - New Ingredient</h1>
      </div>
    </div>

    <% if @ingredient.errors.any? %>
      <div class="column is-6 is-offset-3">
        <article class="message is-danger">
          <div class="message-body">
            <p><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient
            from being saved:</p>
            <br>
            <p><% @ingredient.errors.full_messages.each do |msg|%>
              <li><%= msg %></li>
            <% end%>
            </p>
          </div>
        </article>
      </div>
    <% end %>

    <div class="column is-6 is-offset-3">
      <article class="media">
        <div class="media-content">
          <%= form_with model: [@recipe, @ingredient], local: true do |form| %>
            <div class="field">
              <p class="control">
                <%= form.text_field :qty, class: "input", placeholder: 'Quantity' %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= form.text_field :unit, class: "input", placeholder: 'Unit' %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= form.text_firld :ingredient, class: "textarea", placeholder: "Add ingredient..." %>
              </p>
            </div>
            <nav class="level">
              <div class="level-left">
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= form.submit "Save", class: 'button is-info' %>
                </div>
                <div class="level-item">
                  <%= link_to "Cancel", recipe_path(@recipe), class: 'button is-light' %>
                </div>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>